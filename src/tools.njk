---
layout: layouts/base.njk
title: Tools
permalink: /tools/
---

<div class="flex w-full max-w-4xl flex-1 flex-col gap-4 p-4 md:p-12 xl:p-8">
  <h1 class="text-accent font-mono text-2xl font-bold">Tools</h1>
  <section class="flex flex-col gap-4">
    <div class="relative grid gap-6 sm:grid-cols-2 sm:gap-2">
      <img src="/drawings/used-by.svg" alt="Used by" class="absolute top-10 -left-32 hidden rotate-2 lg:block">
      
      {% for tool in tools %}
      <div class="bg-surface border-card flex h-fit w-fit {{ tool.rotation }} flex-row gap-2 rounded-2xl border-2 p-4">
        <div class="bg-surface border-card h-fit w-fit rounded-xl border p-1 inset-shadow-xs">
          <div class="bg-surface flex h-fit w-fit items-center justify-center rounded-lg p-1 shadow-sm">
            <img alt="{{ tool.name }}" loading="lazy" width="44" height="44" class="rounded-md" src="{{ tool.image }}">
          </div>
        </div>
        <div class="flex w-full flex-col gap-1">
          <div class="flex flex-row items-center justify-between">
            <h3 class="text-primary text-base font-bold">{{ tool.name }}</h3>
            <div class="inline-flex items-center rounded-full border-2 px-2 py-1 w-fit h-fit text-xs font-bold transition-colors border-neutral-300 bg-white text-primary">
              {{ tool.type }}
            </div>
          </div>
          <p class="text-secondary text-base font-medium">{{ tool.description }}</p>
          <a href="{{ tool.link }}" target="_blank" class="text-accent text-base font-medium underline hover:no-underline">
            View on Figma Community
          </a>
        </div>
      </div>
      {% endfor %}
    </div>
  </section>
</div>
